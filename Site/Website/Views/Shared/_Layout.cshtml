<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/cerulean")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">Bugzbgonne</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            @*                          @Html.Bootstrap().Begin(new Nav().Style(NavType.List).Stacked())*@
                            <li>@Html.ActionLink("Bugs List", "Index", "Bug")</li>
                            <li>@Html.ActionLink("Create Bug", "CreateNewBug", "Bug")</li>
                               @if (User.IsInRole("Team Leader"))
                                {
                                    <li>@Html.ActionLink("Create new member", "CreateTeamMember", "Bug")</li>
                                    <li>@Html.ActionLink("Create new project", "CreateProject", "Bug")</li>
                                }
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", false)
    </body>
</html>